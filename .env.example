# ===============================================
# HERMES ODOO ADAPTER CONFIGURATION
# ===============================================

# Service Configuration
LOG_LEVEL=INFO
METRICS_PORT=9090
TESTING=false

# Orion-LD NGSI-LD Context Broker
ORION_URL=http://localhost:1026
ORION_TENANT=
ORION_SERVICE_PATH=/

# Adapter Public URL (for Orion subscriptions callback)
ADAPTER_PUBLIC_URL=http://localhost:8080

# Odoo ERP Configuration
ODOO_URL=http://localhost:8069/jsonrpc
ODOO_DB=odoo
ODOO_USER=admin
ODOO_PASSWORD=admin

# Product/SKU Configuration
SKU_FIELD=default_code

# Inventory Sync Configuration
INVENTORY_SYNC_ENABLED=true
INVENTORY_SYNC_INTERVAL_MINUTES=10
INVENTORY_SYNC_BATCH_SIZE=100
POLL_INTERVAL_SECONDS=60

# Project Mapping (for demo)
# Format: PROJECT_CODE:PRODUCT_SKU or PROJECT_CODE:BOM_ID
PROJECT_MAPPING_FILE=project_mapping.json

# Stock Location Configuration (JSON array)
STOCK_LOCATION_NAMES=["Stock","WH/Stock"]
INCLUDE_RESERVED_STOCK=true

# Retry and Circuit Breaker Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# Security (optional)
API_KEY_HEADER=X-API-Key
API_KEY=

# Features Flags
WRITE_ENABLED=false
WEBHOOK_ENABLED=false
