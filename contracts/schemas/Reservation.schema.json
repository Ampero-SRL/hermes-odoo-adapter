{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hermes.example.org/schemas/Reservation.schema.json",
  "title": "HERMES Reservation Entity Schema",
  "description": "JSON Schema for HERMES Reservation NGSI-LD entity",
  "type": "object",
  "required": ["id", "type", "projectRef", "lines", "status", "source"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^urn:ngsi-ld:Reservation:[A-Za-z0-9_-]+$",
      "description": "Reservation entity identifier"
    },
    "type": {
      "type": "string",
      "const": "Reservation",
      "description": "NGSI-LD entity type"
    },
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "NGSI-LD context"
    },
    "projectRef": {
      "type": "object",
      "required": ["type", "object"],
      "properties": {
        "type": {
          "const": "Relationship"
        },
        "object": {
          "type": "string",
          "pattern": "^urn:ngsi-ld:Project:[A-Za-z0-9_-]+$",
          "description": "Reference to Project entity"
        },
        "observedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "lines": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "const": "Property"
        },
        "value": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["sku", "qty"],
            "properties": {
              "sku": {
                "type": "string",
                "minLength": 1,
                "description": "Product SKU"
              },
              "qty": {
                "type": "number",
                "minimum": 0,
                "exclusiveMinimum": 0,
                "description": "Quantity to reserve"
              },
              "unit": {
                "type": "string",
                "default": "Unit",
                "description": "Unit of measure"
              }
            },
            "additionalProperties": false
          },
          "description": "Reservation lines"
        },
        "observedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "const": "Property"
        },
        "value": {
          "type": "string",
          "enum": ["created", "confirmed", "allocated", "cancelled"],
          "description": "Reservation status"
        },
        "observedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "source": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "const": "Property"
        },
        "value": {
          "type": "string",
          "description": "Source system (e.g., 'odoo')"
        },
        "observedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "createdAt": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "const": "Property"
        },
        "value": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "observedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}